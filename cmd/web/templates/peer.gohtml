{{define "peer"}}
  {{template "header" .}}
  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="column">
          <h1 class="title is-4">Peer Details</h1>
          <div class="box">
            <p>Node Alias: {{.PeerAlias}} <a href="{{.NodeUrl}}{{.Peer.NodeId}}" target="_blank">ðŸ”—</a></p>
            <table>
              <tr>
                  <th>Channel Id</th>
                  <th>Local Balance</th>
                  <th>Remote Balance</th>
                  <th>Local Percentage</th>
                  <th>Active</th>
              </tr>
              {{range .Peer.Channels}}
                  <tr>
                    <th>{{.ChannelId}}</th>
                    <th>{{.LocalBalance}}</th>
                    <th>{{.RemoteBalance}}</th>
                    <th>{{.LocalPercentage}}</th>
                    <th>{{.Active}}</th>
                  </tr>
              {{end}}
            </table>
          </div>
        </div>
        <div class="column">
          <h1 class="title is-4">New Swap</h1> 
          <div class="box">
            <table>
              <tr><td>Node Alias:</td><td style="overflow-wrap: break-word;">{{.PeerAlias}} <a href="{{.NodeUrl}}{{.Peer.NodeId}}" target="_blank">ðŸ”—</a></td></tr>  
                    
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
  {{template "footer" .}}
{{end}}