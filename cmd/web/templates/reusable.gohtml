{{define "header"}}
    <!DOCTYPE html>
    <html>
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PeerSwap Web UI</title>
    <link rel="stylesheet" href="/static/bulma-{{.ColorScheme}}.min.css">
    <style>
        th, td {
        padding: 5px;
        }
    </style>
    </head>
    <body>
        <header>
             <table style="table-layout:fixed; width: 100%">
		        <tr><td style="float: left; text-align: left; width: 80%;">
                    <a href="/">&emsp;<img src="/static/peerswap_logo_{{.ColorScheme}}.png" alt="PeerSwap" width="200"></a>
                </td><td style="float: right; text-align: right; width: 20%;">
                    <a href="/"><img src="/static/cog.png" alt="Config" width="45">&emsp;</a>
                </td><tr>
            </table>
        </header>
        <section class="section">
            {{if ne .Message ""}}
                <div class="container">
                    <div class="columns">
                        <div class="column">
                        <div class="box">
                            <p>âš  {{.Message}}</>
                        </div>
                    </div>
                </div>
            {{end}}
{{end}}

{{define "footer"}}
        <div class="container">     
            <table style="table-layout:fixed; width: 100%">
                <tr>
                    <td style="width: 20%;">
                    </td>
                    <td style="width: 60%;">
                        <div class="content has-text-centered">
                            <p>
                            <strong>PeerSwap Web UI</strong> by <a href="https://github.com/Impa10r/peerswap-web" target="_blank">Impalor</a>.
                            </p>
                        </div>
                    </td>
                    <td style="width: 20%;">
                    </td>
                </tr>
            </table>     
        </div>
    </body>
    </html>
{{end}}