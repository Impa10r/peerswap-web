{{define "swap"}}
  {{template "header" .}}
  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="column">
          <h1 class="title is-4">Swap Details</h1>
          <div class="box">
            <table>
              <tr><td>ID:</td><td style="overflow-wrap: break-word;">{{.Swap.Id}}</td></tr>
              <tr><td>Created At:</td><td >{{.CreatedAt}}</td></tr>
              <tr><td>Asset:</td><td>{{.Swap.Asset}}</td></tr>
              <tr><td>Type:</td><td>{{.Swap.Type}}</td></tr>
              <tr><td>Role:</td><td>{{.Swap.Role}}</td></tr>
              <tr><td>State:</td><td>{{.Swap.State}}</td></tr>
              <tr><td>Initiator:</td><td style="overflow-wrap: break-word;">{{.InitiatorAlias}}<a href="{{.NodeUrl}}{{.Swap.InitiatorNodeId}}" target="_blank">ðŸ”—</a></td></tr>
              <tr><td>Peer:</td><td style="overflow-wrap: break-word;">{{.PeerAlias}} <a href="{{.NodeUrl}}{{.Swap.PeerNodeId}}" target="_blank">ðŸ”—</a></td></tr>
              <tr><td>Amount:</td><td>{{.Swap.Amount}}</td></tr>
              <tr><td>ChannelId:</td><td>{{.Swap.ChannelId}}</td></tr>
              {{if .Swap.OpeningTxId}}
                <tr><td>OpeningTxId:</td><td style="overflow-wrap: break-word;">{{.Swap.OpeningTxId}}<a href="{{.TxUrl}}{{.Swap.OpeningTxId}}" target="_blank">ðŸ”—</a></td></tr>
              {{end}}
              {{if .Swap.ClaimTxId}}
                <tr><td>ClaimTxId:</td><td style="overflow-wrap: break-word;">{{.Swap.ClaimTxId}}<a href="{{.TxUrl}}{{.Swap.ClaimTxId}}" target="_blank">ðŸ”—</a></td></tr>
              {{end}}
              {{if .Swap.CancelMessage}}
                <tr><td>CancelMsg:</td><td>{{.Swap.CancelMessage}}</td></tr>
              {{end}}
              <tr><td>LndChanId:</td><td>{{.Swap.LndChanId}}</td></tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
  {{template "footer" .}}
{{end}}