{{define "swap"}}
  {{template "header" .}}
    <div id="update"></div>
    <script>
      function updatePage(data) {
        document.getElementById('update').innerHTML = data;
      }
      function fetchData() {
        fetch('/update?id={{.Swap.Id}}')
          .then(response => response.text())
          .then(data => updatePage(data));
      }
      setInterval(fetchData, 1000);
    </script>
  {{template "footer" .}}
{{end}}