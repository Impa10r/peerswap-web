{{define "header"}}
    <!DOCTYPE html>
    <html>
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PeerSwap Web UI</title>
    <link rel="stylesheet" href="/static/bulma-{{.ColorScheme}}.min.css">
    <style>
        th, td {
        padding: 5px;
        }
        .rotate-span {
            display: inline-block;
            float: right; 
            text-align: right;
            transform: rotate(90deg);
        }
        .rotate180-span {
            display: inline-block;
            float: right; 
            text-align: right;
            transform: rotate(180deg);
        }
        .rotate-div {
            float: right; 
            text-align: right;
            transform: rotate(180deg);
        }
    </style>
    <script>
        function confirmAction() {
            var confirmation = confirm("Are you sure you want to stop the web server?");
            if (confirmation) {
                // Send POST request if 'Yes' is clicked
                var xhr = new XMLHttpRequest();
                xhr.open("POST", "/stop", true);
                xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
                xhr.send(JSON.stringify({}));
                alert("Stopping PeerSwap Web");
            }
        }
    </script>
    </head>
    <body>
        <header>
            <p style="margin:0.5em;"></p>
            <table style="table-layout:fixed; width: 100%">
		        <tr><td style="float: left; text-align: left; width: 80%;">
                    <a href="/">&emsp;<img src="/static/peerswap_logo_{{.ColorScheme}}.png" alt="PeerSwap" width="200"></a>
                </td><td style="float: right; text-align: right; width: 20%;">
                    <a href="/config"><img src="/static/cog.png" alt="Config" width="45">&emsp;</a>
                </td><tr>
            </table>
        </header>
        <section class="section">
            {{if ne .Message ""}}
                <div class="container">
                    <div class="columns">
                        <div class="column">
                            <div class="box">
                                <p>‚ùó {{.Message}}</>
                            </div>
                        </div>
                    </div>
                </div>
            {{end}}
{{end}}

{{define "footer"}}
            <br>
            <table style="table-layout:fixed; width: 100%">
                <tr>
                    <td style="width: 100px;">
                        <div class="content has-text-centered">
                            <p>
                                <strong>PeerSwap Web</strong> by <a href="https://github.com/Impa10r/peerswap-web" target="_blank">Vlad Goryachev</a>
                            </p>
                        </div>
                    </td>
                </tr>
            </table>
        </section>  
    </body>
    </html>
{{end}}