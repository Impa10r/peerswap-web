                                    <p>Please copy-paste your Elements Core RPC Password into the configuration field below.</p>
                                    <br>
                                    <img src="/static/elements.png" alt="Elements Core">
                                    </center>
                                {{else}}
                                    <p style="overflow-wrap: break-word;">‚ùó {{.Message}}</>
                                {{end}}
                            </div>
                        </div>
                    </div>
                </div>
            {{end}}
{{end}}

{{define "footer"}}
